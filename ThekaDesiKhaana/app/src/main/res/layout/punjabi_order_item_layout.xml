<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/menu_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Punjabi"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/menu_item_qty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food_type"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Veg"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/menu_type_image_view"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/veg_icon" />

        <ImageButton
            android:id="@+id/punjab_veg_remove_item_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/minus_icon" />

        <EditText
            android:id="@+id/punjabi_veg_item_count_et"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="end"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/punjabi_veg_add_item_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/add_icon" />
    </LinearLayout>
</LinearLayout>